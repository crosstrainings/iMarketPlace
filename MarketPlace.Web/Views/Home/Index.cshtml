@using MarketPlace.Entities.Advertisements;
<html>
<head>
    <title>Bootstrap UI Components</title>
    <style>
        .product-card {
            border-radius: 0;
            padding-top: 0px;
            padding-bottom: 5px;
            background: white;
            box-shadow: 0;
            height: 337px;
        }

        h2.title {
            color: lightgray;
            font-family: 'Roboto', sans-serif;
            font-size: 18px;
            font-weight: 700;
            margin: 0 15px;
            text-transform: uppercase;
            margin-bottom: 30px;
            position: relative;
        }

            h2.title:before {
                content: " ";
                position: absolute;
                background: #fff;
                bottom: -6px;
                width: 220px;
                height: 30px;
                z-index: -1;
                left: 50%;
                margin-left: -110px;
            }

            h2.title:after {
                content: " ";
                position: absolute;
                border: 1px solid #f5f5f5;
                bottom: 8px;
                left: 0;
                width: 100%;
                height: 0;
                z-index: -2;
            }

        .product-card-img {
            box-shadow: none;
            border: 0;
            padding-top: 30px;
        }

        .list-group-item a {
            text-decoration: none;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="row">
        <div class="col-lg-2 hidden-md">
            <ul class="list-group" id="app-main-category-list">
                <li class="list-group-item">
                    <a href="#" id="1">
                        <span class="glyphicon glyphicon-plus"></span>
                        vehicles
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="#" id="2">
                        <span class="glyphicon glyphicon-plus"></span>
                        electronics
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="#" id="3">
                        <span class="glyphicon glyphicon-plus"></span>
                        sports
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="#" id="4">
                        <span class="glyphicon glyphicon-plus"></span>
                        fitness
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="#" id="5">
                        <span class="glyphicon glyphicon-plus"></span>
                        clothes
                    </a>
                </li>
            </ul>
        </div>
        <div class="col-lg-8">
            <div class="thumbnail">
                <div class="carousel slide" data-ride="carousel" data-interval="10000" id="mycarousel">
                    <ol class="carousel-indicators">
                        <li class="active" data-target="#mycarousel" data-slide-to="0"></li>
                        <li data-target="#mycarousel" data-slide-to="1"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="/content/images/banners/new.png" style="height: 298px;" class="img-responsive">
                        </div>
                        <div class="item">
                            <img src="/content/images/banners/new.png" style="height: 298px;" class="img-responsive">
                        </div>
                    </div>
                    <a href="#mycarousel" class="carousel-control left" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                    </a>
                    <a href="#mycarousel" class="carousel-control right" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <img src="~/Content/images/Others/SaleImage.JPG" class="img-responsive img-thumbnail" style="height:300px" />
        </div>
    </div>
    <!-- /.categories - banner - area -->
    <div class="row">
        <div class="col-lg-2 hidden-md">
            @if (ViewBag.IsLoggedIn == true)
            {
                @RenderPage("../shared/_RecentlyViewed.cshtml")
            }
        </div>
        <div class="col-lg-8">
            <div class="row">
                @Html.Partial("~/Views/Shared/_HomeCategoryRow.cshtml")
            </div>

            <br />
            <div class="row">
                <h2 class="title text-center">Features Items</h2>
            </div>
            <div class="row" id="app-main-products">

            </div>
            <div class="row">
                <span class="text-center center-block">
                    <button class="btn btn-default app-main-load-more" data-skip-value="0" style="width:200px;">Load More</button>
                </span>
            </div>
            <br /><br />
            <div class="row">
                <h2 class="title text-center">Categories</h2>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <img src="~/Content/images/Others/category-rows.PNG" class="img-responsive" />
                </div>
            </div>
            <br /><br />
        </div>
        <div class="col-lg-2">

        </div>
    </div>
    @RenderPage("../Shared/_Login.cshtml")
    @RenderPage("../Shared/_Register.cshtml")
    <div class="theme-area">

    </div>

    @section IndexScript{
        <script src="~/scripts/app-theme.js"></script>
        <script>
            $(function () {
                loadData(0, 10);
                $(".app-main-load-more").click(function () {
                    var take = 10;
                    var skip = $(this).data("skip-value");
                    $(this).html("Loading...");
                    loadData(skip, take);
                })
            });
            function loadData(skip, take) {
                $.ajax({
                    url: `/Product/Load?skip=${skip}&take=${take}`,
                    method: "get"
                }).done(function (response) {
                    $("#app-main-products").append(response.view);
                    $(".app-main-load-more").data("skip-value", response.Count + skip);
                    $(".app-main-load-more").html("Load More");
                }).fail(function () {
                    alert("fail")
                })
            }

        </script>
    }
</body>
</html>