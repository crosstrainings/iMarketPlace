@model IEnumerable<MarketPlace.ViewModels.Admin.Category.AddCategoryViewModel>
@Html.Partial("_DataTableStyles")
<script src="~/Scripts/Admin/admin-actions.js"></script>
<p>
    <a href="#" class="admin-action" data-area="Administration" data-controller="Admin" data-action="AddCategory">Add New</a>
</p>
<table class="table table-bordered table-hover" id="dt">
    <thead class="bg-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubCategoryId)
                </th>*@
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubCategoryId)
                    </td>*@
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.Partial("_DataTableScripts")